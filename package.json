{
  "name": "mail-client",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "next build",
    "dev": "concurrently \"next dev\" \"tsx --require dotenv/config src/server/index.ts\"",
    "dev:next": "next dev",
    "dev:fastify": "tsx --require dotenv/config src/server/index.ts",
    "dev:electron": "(xattr -cr ./electron || true) && NODE_ENV=development pnpm exec cap open @capacitor-community/electron",
    "static": "NEXT_PUBLIC_IS_MOBILE=true next build",
    "sync:cap": "pnpm run static && pnpm exec cap sync",
    "sync:electron": "pnpm run static && pnpm exec cap copy @capacitor-community/electron",
    "lint": "next lint",
    "start": "next start",
    "clean": "rm -rf .next",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@capacitor-community/electron": "^5.0.1",
    "@capacitor/android": "^6.1.2",
    "@capacitor/ios": "^6.1.2",
    "@capacitor/keyboard": "^6.0.2",
    "@fastify/cors": "^10.0.1",
    "@radix-ui/react-slot": "^1.1.0",
    "@t3-oss/env-nextjs": "^0.10.1",
    "@tanstack/react-query": "^5.59.15",
    "@trpc/client": "11.0.0-rc.586",
    "@trpc/next": "11.0.0-rc.586",
    "@trpc/react-query": "11.0.0-rc.586",
    "@trpc/server": "11.0.0-rc.586",
    "@vercel/postgres": "^0.10.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.33.0",
    "fastify": "^5.0.0",
    "geist": "^1.3.1",
    "lucide-react": "^0.460.0",
    "next": "^14.2.15",
    "postgres": "^3.4.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "server-only": "^0.0.1",
    "superjson": "^2.2.1",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.1.2",
    "@capacitor/core": "^6.1.2",
    "@swc/core": "^1.7.36",
    "@types/eslint": "^8.56.12",
    "@types/node": "^20.16.12",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.10.0",
    "concurrently": "^9.0.1",
    "core": "link:@types/capacitor/core",
    "drizzle-kit": "^0.24.2",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.15",
    "eslint-plugin-drizzle": "^0.2.3",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "tailwindcss": "^3.4.14",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
